<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:src="@drawable/hostels"
        android:id="@+id/launcherpic"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-172dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app_name"
        android:text="MY ROOM"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="19sp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/launcherpic"
        android:text="By tapping on the Get Started Button, you agree to our "
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:id="@+id/getStartedText"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/getStartedText"
        android:text="Terms and Conditions"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="15sp"
        android:id="@+id/t_and_c"
        android:textAlignment="center"
        android:textColor="#1569C7"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_and_c"
        android:layout_centerHorizontal="true"
        android:text="GET STARTED AS LANDLORD"
        android:backgroundTint="#1569C7"
        android:onClick="ToLandlordRegistrationScreen"
        android:textColor="#ffffff"
        android:id="@+id/landlordbtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/landlordbtn"
        android:layout_centerHorizontal="true"
        android:text="    GET STARTED AS CLIENT   "
        android:backgroundTint="#1569C7"
        android:onClick="ToClientRegistrationScreen"
        android:textColor="#ffffff"
        android:id="@+id/clientbtn"/>





</RelativeLayout>